{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "rewrites": [
      { "source": "/static/:path*", "destination": "/static/:path*" },
      { "source": "/:file*.:ext+", "destination": "/:file*.:ext+" },
      { "source": "/(.*)",         "destination": "/index.html" }
    ]
  }
  